{
  "name": "rodrigo2016rj/demonstracao_de_chats_com_code_igniter",
  "authors": [
    {
      "name": "Rodrigo Diniz da Silva"
    }
  ],
  "type": "project",
  "description": "Demonstração de Chats com CodeIgniter.",
  "keywords": ["CodeIgniter", "Smarty", "jQuery", "Chat"],
  "license": "MIT",
  "require": {
    "php": "^7.4 || ^8.0",
    "codeigniter4/framework": "^4.0"
  },
  "require-dev": {
    "fakerphp/faker": "^1.9",
    "mikey179/vfsstream": "^1.6",
    "phpunit/phpunit": "^9.1"
  },
  "autoload": {
    "exclude-from-classmap": [
      "**/Database/Migrations/**"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit"
  }
}
